- if @festival
  = content_for :festival_menu do
    = render :partial => 'festivals/festival_menu', :locals => {festival: @festival}

  
.row.posts_index_container
  .large-10.columns.large-offset-1

    - @posts.in_groups_of(3).each do |post_group|
      .row.post_row
        - post_group.compact.each_with_index do |post, index|
          .medium-4.small-12.columns.post_small{class: post_group[index+1].nil? ? :end : false}
            .title= link_to post.title, post
            .metadata
              %span.date= l post.published_at.localtime.to_date, :format => :long
              - unless post.creator.nil? 
                = ", #{post.creator.name}"
      
            - if post.image?
              .post_image= link_to image_tag(post.image.url(:box)), post
              .related
                - if post.event
                  = link_to post.event.name, post.event
                - if post.festival
                  = link_to post.festival.name, post.festival
                - if post.project
                  = link_to post.project.name, post.project
                = link_to t(:read_more), post, :class => :last
      .row
        .small-12.columns= paginate @posts