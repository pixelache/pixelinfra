.post_single{:style => "width: " + (!@post.image_width.nil? ?  @post.image_width.to_s  : "660") + "px;"}
  .internal.columns
    - if @post.image?
      .row
        .post_image 
          
          - if !@post.image_width.nil?
            - if @post.image_width >= 1200
              = image_tag @post.image.url(:twelvehundred)
            - else
              = image_tag @post.image.url
          - else
            = image_tag @post.image.url
    .row
      .columns.metadata
        %span.date= l @post.published_at, :format => :long
        - unless @post.creator.nil? 
          = ", #{@post.creator.name}"
    .row
      .title= @post.title
      
    .row
      .body= raw @post.body

  .row
    %h1= t(:related_content)
  / .small-4.columns
  /   - if @post.event
  /     %p
  /       Event:
  /       = link_to @post.event.name, @post.event
  /   - if @post.project
  /     %p
  /       Project:
  /       = link_to @post.project.name, @post.project
  /   - if @post.festival
  /     %p
  /       Festival:
  /       = link_to @post.festival.name, @post.festival