.yearly_archive
    
  
  .row
    .small-8.columns
      .row
        .medium-9.columns.medium-offset-3
          .year= @year
      - unless @festival.blank? 
        .festival
          .row
            .medium-9.columns.medium-offset-3
              .section_title
                = @festival.name + " : "
                = @festival.subtitle
          .row
            .medium-9.columns.medium-offset-3.events
              - @festival.events.published.each do |e|
                .row
                  .small-3.columns= link_to image_tag(e.image.url(:box)), e
                  .small-9.columns.title_container
                    .name= link_to e.name, e

        - unless @projects.empty?
          .projects
            .row
              .medium-9.columns.medium-offset-3
                .section_title= t(:projects)
                
            .row
              .medium-9.columns.medium-offset-3.project_list
                - @projects.each do |p|
                  .row
                    .small-3.columns
                      - if p.photos.empty?
                        &nbsp;
                      - else
                        = link_to image_tag(p.photos.first.filename.url(:box)), p
                    .small-9.columns.title_container
                      .name= link_to p.name, p
    .small-4.columns
      #archive_menu.sticky
        %ul
          %li= link_to t(:top), '#'
          %li= link_to t(:festival), '#festival'
          
        
