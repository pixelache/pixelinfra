.event
  .row
    .small-12.columns
      %h1= @event.name
      - unless @event.facilitator_name.blank?
        .event_hosts= link_to_unless(@event.facilitator_url.blank?, @event.facilitator_name, @event.facilitator_url)


      - unless @event.festival.blank?
        %h5= raw "at: #{ link_to @event.festival.name, @event.festival}"

  .row
    .small-12.columns
      .metadata
        = l @event.start_at, :format => :long
        - unless @event.end_at.blank? || @event.end_at == @event.start_at
          = " - #{l @event.end_at, :format => :long}"
      - if @event.image? && !@event.image_width.blank?
        - if @event.image_width >= 800
          = image_tag @event.image.url(:standard)
        - else
          = image_tag @event.image.url
  .row
    .small-12.columns
      = raw @event.description