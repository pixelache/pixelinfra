= content_for :festival_menu do
  = render :partial => 'festival_menu', :locals => {festival: @festival}


            
.festival

  - if @festival.image?
    
    / .row
    /   .small-6.columns
    /     %h1= @festival.name
    /     - unless @festival.subtitle.blank?
    /       %h2= @festival.subtitle
    /     %h2= date_range(@festival.start_at, @festival.end_at)
    .small-12.columns.festival_image
      = image_tag @festival.image.url

  - else
    .row
      .small-12.columns
        %h1= @festival.name
        - unless @festival.subtitle.blank?
          %h2= @festival.subtitle
        %h2= date_range(@festival.start_at, @festival.end_at) 
        
  .row
    .small-9.columns= raw @festival.overview_text


                    
    