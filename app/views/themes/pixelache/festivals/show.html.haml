.page_tree
  .row
    .small-12.columns
      = link_to t(:festivals), festivals_path
      = ' : '
      - @festival.self_and_ancestors.reverse.each do |p|
        - if p == @festival
          %strong= p.name
        - else
          %span.leaf
            = link_to p.name, p
            = " : "
            
.festival{:style => "background-color: " + (@festival.background_colour.blank? ? "#FFF" : @festival.background_colour)} 

  - if @festival.image?
    
    .row
      .small-6.columns
        %h1= @festival.name
        - unless @festival.subtitle.blank?
          %h2= @festival.subtitle
        %h2= date_range(@festival.start_at, @festival.end_at)  
      .small-6.columns
        - if @festival.image?
          - unless @festival.image_width.blank?
            - if @festival.image_width < 1000
              = image_tag @festival.image.url
            - else
              = image_tag @festival.image.url(:standard)
          - else
            = image_tag @festival.image.url(:standard)
          
  - else
    .row
      .small-12.columns
        %h1= @festival.name
        - unless @festival.subtitle.blank?
          %h2= @festival.subtitle
        %h2= date_range(@festival.start_at, @festival.end_at) 
        
  .row
    .small-9.columns= raw @festival.overview_text
    = render :partial => 'sidebar'
                  
                    
                    
    