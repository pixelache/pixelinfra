.from_the_archive{:style => "background: url(#{@archive.image.url(:full)})  no-repeat center top; background-size: cover"}
  .pink
    .row
      .small-12.columns.medium-offset-1
        .title= t(:from_the_archives)
    .row
      .small-12.medium-6.columns.medium-offset-1
        .year= @archive.year
    .row
      .small-12.medium-9.columns.medium-offset-1.activity_name= link_to @archive.activity.name, @archive.activity

    .row
      .small-12.medium-9.columns.medium-offset-1
        .description= raw truncate_html(sanitize(@archive.activity.description, tags: %w{strong b bold i em italic underline u}), :length => 300)