!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Open Learning Steps and Open-sourcing Festivals"
      %meta{:content => content_for?(:description) ? yield(:description) : "OLSOF project", :name => "description"}
      = stylesheet_link_tag "application", :media => "all"
     
      = stylesheet_link_tag 'olsof/stylesheets/application', :media => :screen
      = csrf_meta_tags
      
      = yield(:head)
      
  %body{:class => "#{controller_name} #{action_name}"}
    = javascript_include_tag "application"
    = javascript_include_tag "vendor/modernizr"
    .row
      .small-3.columns#sidebar
        .logo
          .first= link_to 'Open', '/'
        .logo
          .second= link_to raw("&#8594; Sourcing"), '/'
        .logo
          .third= link_to 'Festivals', '/'
        = yield :sidebar
      
      .small-2.columns#middle= yield :middle
      
      
      .small-7.columns
        .right_wrap.row
          .small-12.columns
            .bar_menu
              .bar= image_tag(theme_image_path('vert_bar.png'))
              .bar= image_tag(theme_image_path('vert_bar.png'))
              .bar= image_tag(theme_image_path('vert_bar.png'))
              .bar= image_tag(theme_image_path('vert_bar.png'))
        .row
          .small-12.columns#main= yield
    %footer
      .olsof-footer
        .row
          - @site.nodes.uniq.each do |node|
            .small-2.columns= link_to image_tag(node.logo.url(:logo).gsub(/development/, 'production'), :width => 130), node.website
          .small-2.columns= theme_image_tag 'grundtvig_logo_english.jpg'
    / ! end of #container
