.top_banner
  .row
    .small-12.columns.small-centered.text-center
      = image_tag theme_image_path('logo_LS_s.png')
      = image_tag theme_image_path('caption.png')
  
.programme_carousel
  - @frontitems.shuffle.each do |fi|
    - if fi.frontmodule
      - unless fi.item.nil?
      
        = render :partial => fi.frontmodule.partial_name, :locals => {:front => fi}
      - else
        = render :partial => fi.frontmodule.partial_name, :locals => {:front => fi}


      
.under_construction
  .row
    .columns.small-12.medium-6.text-center.uctext
      .row
        .columns.small-7.small-centered
          %h4 
            This site, like this festival, is
            %strong under construction.
      .row
        .columns.small-9.small-centered
          %h4
            For more info, comments, questions, or to volunteer, please email
            %strong festival at pixelache .ac
            
.support
  .row
    .columns.small-12.small-centered.text-center
      = image_tag theme_image_path('festival_logos.png')
      
                  
= content_for :jquery do
  :plain
    $('.programme_carousel').slick({infinite: true,
      slidesToShow: 1,   autoplay: true, pauseOnHover: false,
  autoplaySpeed: 4400 });