%tr
  %td= image_tag post.image.url(:thumb), :width => 40
  %td
    = post.title
    .small
      = post.wordpress_author
      - unless post.photos.empty?
        &sdot;
        = pluralize(post.photos.size, 'photo') + " attached"
      &sdot;
      = link_to 'View', post, :target => :_blank
      - unless post.event.blank?
        %br/
        &sdot;
        = link_to post.event.name, post.event, :target => :_blank
      - unless post.project.blank?
        &sdot;
        = link_to post.project.name, [:admin, post.project], :target => :_blank
      - unless post.festival.blank?
        &sdot;
        = link_to post.festival.name, [:admin, post.festival], :target => :_blank
  %td= post.subsite.name
  %td
    - if post.published == true
      = l post.published_at, :format => :long
    - else
      no
      
  %td.actions
    - if can? :edit, Post
      = link_to 'Edit', edit_admin_subsite_post_path(post.subsite, post)
    - if can? :destroy, Post
      |
      = link_to 'Destroy', "/admin/subsites/#{post.subsite.id}/posts/#{post.slug.to_s}", :method => :delete, :data => {:confirm => "Are you sure?"}