.row
  .small-10.columns
    %h2 Posts
    = paginate @posts
    %table.table.table-condensed
      %thead
        %tr
          %th
          %th= sortable_column "Title"
          %th= sortable_column "Site"
          %th= sortable_column "Published"
          %th{:colspan => 2}
      %tbody
        - @posts.each do |post|
          = render :partial => 'post', :locals => {:post => post}
    %p= link_to 'Create new post', new_admin_post_path
    = paginate @posts