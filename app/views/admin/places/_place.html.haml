%tr
  %td= place.name
  %td= place.address
  %td.actions
    - if can? :edit, place
      = link_to 'Edit', edit_admin_place_path(place), class: [:button, :tiny]
    - if can? :destroy, place 
      - if place.events.published.count == 0
        = link_to 'Destroy', [:admin, place], :method => :delete,  class: [:button, :round, :alert, :tiny],  :data => {:confirm => 'Are you sure you want to delete this place?'}

    