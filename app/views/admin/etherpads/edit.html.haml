= semantic_form_for [:admin, @etherpad], :html => {:class => "custom" } do |f|
  .row
    .small-9.columns
      %h2= @etherpad.name
  .row
    .small-3.columns= f.input :subsites
  .row
    .small-3.columns= f.input :festivals
  .row
    .small-3.columns= f.input :projects
  .row
    .small-3.columns= f.input :private_pad, :label => "Make private?", :hint => "Tick this to remove this pad from the public list of  pads"
  = f.submit 'Save', :class => [:button, :small, :round]