= semantic_nested_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "custom"} ) do |f|
  = devise_error_messages!
  .row
    .large-6.columns= f.input :email
  .row
    .large-6.columns= f.input :name, :label => 'Your real/full name'
  .row
    .large-6.columns= f.input :username, :label => "Username/nickname"
  %p You can add your Facebook and Twitter usernames here to allow sign-in with those services too.
  = f.fields_for :authentications do |ff|
    .fieldset
      
      .row
        .small-4.columns
          = ff.input :provider, :as => :select, :collection => [ ['Facebook', 'facebook'], ['Google', 'google_oauth2'], ['Twitter', 'twitter']]
          = ff.input :username
    :javascript
      $(document).foundation();
  = f.link_to_add 'Add another authentication method', :authentications
  = f.submit